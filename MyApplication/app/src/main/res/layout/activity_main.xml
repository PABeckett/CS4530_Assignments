    <EditText
        android:id="@+id/middlename"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:hint="Middle Name:"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstname" />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:hint="Last Name:"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/middlename" />

    <EditText
        android:id="@+id/firstname"
        android:layout_width="334dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:hint="First Name:"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_pic"
        app:layout_constraintVertical_bias="0.51" />

    <Button
        android:id="@+id/button_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="Take a Picture"
        app:layout_constraintBottom_toTopOf="@+id/iv_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastname" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="76dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/button_pic"
        android:background="#1A7F7F7F"
        app:layout_constraintBottom_toTopOf="@+id/button_submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_pic" />

</androidx.constraintlayout.widget.ConstraintLayout>